<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
   <android.support.v7.widget.RecyclerView
       android:id="@+id/rlv_message_content"
       android:layout_above="@+id/rl_message_send"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>


    <RelativeLayout
        android:id="@+id/rl_message_send"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et_message"
            android:layout_toLeftOf="@+id/iv_message_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_message_send"
            android:layout_toLeftOf="@+id/iv_message_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_message_clear"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
      
    </RelativeLayout>

</RelativeLayout>