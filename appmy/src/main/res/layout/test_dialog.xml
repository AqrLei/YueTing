<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="#ffffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_test_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0b0b0b"
        android:gravity="center"
        android:textSize="16dp"
        android:visibility="gone"
        tools:text="标题"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_test_dialog_msg"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="内容消息"/>
    <View
        android:id="@+id/v_test_dialog_divider"
        android:layout_width="match_parent"
        android:background="#868484"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_test_dialog_positive_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="取消"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_test_dialog_negative_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="确定"/>
    </LinearLayout>

</LinearLayout>