<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundBar">
        <attr name="backgroundColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="startDegree" format="float"/>
        <attr name="sweepDegree" format="float"/>
        <attr name="rotateDegree" format="float"/>
        <attr name="animationVelocity" format="float"/>
        <attr name="radius" format="dimension"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="maxProgress" format="float"/>
        <attr name="progress" format="float"/>
        <attr name="capStyle">
            <enum name="butt" value="0"/>
            <enum name="round" value="1"/>
            <enum name="square" value="2"/>
        </attr>
        <attr name="useGradientGolor" format="boolean"/>
        <attr name="openAnimation" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="VisualizerView">
        <attr name="useMultiColor" format="boolean"/>
        <attr name="color" format="color"/>
        <attr name="scaleTime" format="integer"/>
        <attr name="scaleRatio" format="float"/>
        <attr name="vRadius" format="dimension"/>
        <attr name="offSetX" format="integer"/>
        <attr name="scaleStyle">
            <enum name="center" value="0"/>
            <enum name="centerX" value="1"/>
            <enum name="centerXLeft" value="10"/>
            <enum name="centerXRight" value="11"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AlphaListView">
        <attr name="listMinHeight" format="float"/>
        <attr name="listMinusHeight" format="float"/>
    </declare-styleable>

</resources>