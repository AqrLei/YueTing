<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bottom_read_seekBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimenButtonH"
    android:layout_gravity="bottom"
    android:background="@color/colorTitleBarGrey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:visibility="visible">

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/sb_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="1000"
        android:progress="0" />

    <TextView
        android:id="@+id/tv_done_percent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimenButtonH"
        android:gravity="center"
        android:padding="@dimen/dimenPadding"
        android:text="00.0%"
        android:textColor="@color/colorReadProgress"
        android:textSize="@dimen/dimenBigTextSize" />

</LinearLayout>