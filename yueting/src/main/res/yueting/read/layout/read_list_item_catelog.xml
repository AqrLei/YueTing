<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_ripple_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_catalog_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenButtonH"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="3"
        android:paddingLeft="@dimen/dimenPadding10dp"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenDividerLine"
        android:background="@color/colorDividerLine" />

</LinearLayout>