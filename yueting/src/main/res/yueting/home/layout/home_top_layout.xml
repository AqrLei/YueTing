<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPageGreen">


    <TextView
        android:id="@+id/tv_center_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_left_read"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@drawable/oval_shape_usetime"
        android:gravity="center"
        android:text="悦"
        android:textColor="@color/colorPageWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_right_listen"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@drawable/oval_shape_usetime"
        android:gravity="center"
        android:text="听"
        android:textColor="@color/colorPageWhite"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="75dp"
        android:background="#4aacb7"
        android:drawableRight="@mipmap/ic_launcher_round"
        android:padding="5dp"
        android:textSize="20dp"
        android:text="悦读"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>