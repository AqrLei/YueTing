<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/manageListsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ripple_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dimenPadding5dp"
        android:paddingTop="@dimen/dimenPadding5dp"
        android:text="管理书单"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View style="@style/DividerStyle" />

    <TextView
        android:id="@+id/newListTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ripple_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dimenPadding5dp"
        android:paddingTop="@dimen/dimenPadding5dp"
        android:text="新建书单"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View style="@style/DividerStyle" />

    <TextView
        android:id="@+id/addItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ripple_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dimenPadding5dp"
        android:paddingTop="@dimen/dimenPadding5dp"
        android:text="添加书籍"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View style="@style/DividerStyle" />

</LinearLayout>