<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_read_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimenReadListItemH"
    android:background="@drawable/common_ripple_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleNameTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenExtraView"
        android:layout_weight="1"
        android:drawableLeft="@drawable/common_level_list_title"
        android:drawablePadding="@dimen/dimenReadListItemPadding"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:textSize="@dimen/sizeText18dp" />

    <View style="@style/DividerStyle" />

</LinearLayout>