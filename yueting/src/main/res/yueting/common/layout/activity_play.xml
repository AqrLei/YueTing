<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yueting="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aqrlei.graduation.yueting.ui.PlayActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#ffffffff" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/TitleBarImageViewStyle"
            android:onClick="onClick" />

        <TextView
            style="@style/TitleBarTextViewStyle"
            android:text="播放中" />
    </FrameLayout>

    <com.aqrairsigns.aqrleilib.ui.view.VisualizerView
        android:id="@+id/vv_play"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#76a1d4"
        yueting:offSetX="64"
        yueting:scaleStyle="center"
        yueting:scaleTime="3"
        yueting:useMultiColor="true"

        yueting:vRadius="100dp" />

    <LinearLayout
        android:id="@+id/ll_play_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9eec8484"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_album_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_music_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="2"
            android:onClick="onClick"
            android:scrollHorizontally="true"
            android:text="这是歌的名字"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_play_type"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="表" />

        <TextView
            android:id="@+id/tv_previous"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="上" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.aqrairsigns.aqrleilib.ui.view.RoundBar
                android:id="@+id/rb_progress_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                yueting:progress="0"
                yueting:radius="12dp"
                yueting:rotateDegree="180"
                yueting:roundWidth="3dp"
                yueting:useGradientGolor="true" />

            <TextView
                android:id="@+id/tv_play_control"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="播" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_next"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="下" />
    </LinearLayout>


</LinearLayout>
