<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yueting="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_play_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#9eec8484"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/popUpWinTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPageGrey"
        android:gravity="center"
        android:text="^"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.aqrairsigns.aqrleilib.ui.view.AlphaListView
        android:id="@+id/playListLv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone"
        tools:visibility="visible"
        yueting:layout_constraintTop_toBottomOf="@+id/popUpWinTv"
        yueting:listMinHeight="90" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        yueting:layout_constraintTop_toBottomOf="@+id/playListLv">

        <ImageView
            android:id="@+id/iv_album_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_music_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="2"
            android:onClick="onClick"
            android:scrollHorizontally="true"
            android:text="这是歌的名字"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_play_type"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="表"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_previous"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="上" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.aqrairsigns.aqrleilib.ui.view.RoundBar
                android:id="@+id/rb_progress_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                yueting:progress="0"
                yueting:radius="12dp"
                yueting:rotateDegree="180"
                yueting:roundWidth="3dp"
                yueting:useGradientGolor="true" />

            <TextView
                android:id="@+id/tv_play_control"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="播" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="下" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

