<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimenView40dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/selectItemIv"
        style="@style/SelectViewStyle"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/itemNameTv" />

    <TextView
        android:id="@+id/itemNameTv"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:text="歌单"
        android:textSize="@dimen/sizeText15dp"
        android:layout_height="match_parent"
        android:background="@drawable/common_ripple_item"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/selectItemIv"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>