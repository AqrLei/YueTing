<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimenView40dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/selectItemIv"
        style="@style/SelectViewStyle"
        android:layout_gravity="right"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/fileNameTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_ripple_item"
        android:drawableLeft="@drawable/common_level_list_file"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dimenPadding46dp"
        android:text="文件名"
        android:textSize="@dimen/sizeText15dp" />

</FrameLayout>