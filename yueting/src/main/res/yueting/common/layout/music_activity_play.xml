<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yueting="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aqrlei.graduation.yueting.ui.PlayActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#ffffffff" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/TitleBarImageViewStyle"
            android:onClick="onClick" />

        <TextView
            style="@style/TitleBarTextViewStyle"
            android:text="播放中" />
    </FrameLayout>

    <com.aqrairsigns.aqrleilib.ui.view.VisualizerView
        android:id="@+id/vv_play"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#76a1d4"
        yueting:offSetX="64"
        yueting:scaleStyle="center"
        yueting:scaleTime="3"
        yueting:useMultiColor="true"

        yueting:vRadius="100dp" />

    <include layout="@layout/music_include_yueting_play" />


</LinearLayout>
