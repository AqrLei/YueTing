<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_tab_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#af71ccb4"
    android:orientation="horizontal">
    <!--以后替换成图-->
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="设置" />

    <RadioGroup
        android:id="@+id/rg_anim_tab"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="首页"
            android:textColor="@color/main_selector_tab_text"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rb_tab_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="悦读"
            android:textColor="@color/main_selector_tab_text"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rb_tab_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="音乐"
            android:textColor="@color/main_selector_tab_text"
            android:textSize="15dp" />

    </RadioGroup>
    <!--以后替换成图-->
    <TextView
        android:id="@+id/tv_file_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="本地" />
</LinearLayout>


