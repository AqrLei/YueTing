<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_music_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_ripple_item"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenListItem"
        android:background="@drawable/common_ripple_item"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="@dimen/dimenListItemFL"
            android:layout_height="@dimen/dimenListItemFL"
            android:layout_margin="@dimen/dimenListItemFLM">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_music_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimenListItemMR"
            android:layout_marginTop="@dimen/dimenListItemMT"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/dimenNameTextSize" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_singer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/dimenSmallNameTextSize" />

                <TextView
                    android:id="@+id/tv_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textSize="@dimen/dimenSmallNameTextSize" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/DividerStyle" />

</LinearLayout>