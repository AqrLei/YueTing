<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenViewHeight" />

    <RadioGroup
        android:id="@+id/rg_read_catalog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenButtonH"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_catalog_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="@dimen/dimenPadding"
            android:gravity="center"
            android:paddingTop="@dimen/dimenPadding"
            android:text="目录"
            android:textColor="@color/main_selector_tab_text"
            android:textSize="@dimen/dimenNameTextSize" />

        <RadioButton
            android:id="@+id/rb_bookMark_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="@dimen/dimenPadding"
            android:gravity="center"
            android:paddingTop="@dimen/dimenPadding"
            android:text="书签"
            android:textColor="@color/main_selector_tab_text"
            android:textSize="@dimen/dimenNameTextSize" />
    </RadioGroup>

    <com.aqrairsigns.aqrleilib.ui.view.AlphaListView
        android:id="@+id/lv_catalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

</LinearLayout>