<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manageItemTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ripple_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dimenPadding5dp"
        android:paddingTop="@dimen/dimenPadding5dp"
        android:text="管理书籍"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View style="@style/DividerStyle" />

    <TextView
        android:id="@+id/lookDetailsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ripple_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dimenPadding5dp"
        android:paddingTop="@dimen/dimenPadding5dp"
        android:text="查看详情"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View style="@style/DividerStyle" />

    <TextView
        android:id="@+id/moveItemsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_ripple_dialog"
        android:gravity="center"
        android:paddingBottom="@dimen/dimenPadding5dp"
        android:paddingTop="@dimen/dimenPadding5dp"
        android:text="移动到歌单"
        android:textSize="@dimen/sizeText15dp"
        android:textStyle="bold" />

    <View style="@style/DividerStyle" />

</LinearLayout>