<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yueting="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_impage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:visibility="gone"/>
    <!--<com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_picture"
        android:layout_above="@+id/bt_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImageScaleType="fitXY"
        />-->
    <ListView
        android:id="@+id/lv_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_post"
        android:visibility="gone" />

    <ExpandableListView
        android:id="@+id/elv_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_post"
        android:groupIndicator="@null"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="post"
        android:visibility="visible"/>

    <com.aqrairsigns.aqrleilib.view.RoundBar
        android:id="@+id/rb_test_ratio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        yueting:openAnimation="true"
        yueting:useGradientGolor="true"
        yueting:animationVelocity="3"
        yueting:capStyle="round" />


</RelativeLayout>