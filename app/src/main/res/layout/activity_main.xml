<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ly_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <!--
        <view
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFE5E5E5"/>-->
        <RadioGroup
            android:id="@+id/rg_main_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFFFF"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_tab_home"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/main_selector_tab_home_img"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="首页"
                android:textColor="@color/main_selector_tab_text"
                android:textSize="12dp"/>
            <RadioButton
                android:id="@+id/rb_tab_chat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/main_selector_tab_creditcard_img"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="聊天"
                android:textColor="@color/main_selector_tab_text"
                android:textSize="12dp"/>
            <RadioButton
                android:id="@+id/rb_tab_img"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/main_selector_tab_profile_img"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="图片"
                android:textColor="@color/main_selector_tab_text"
                android:textSize="12dp"/>
        </RadioGroup>

    </LinearLayout>

</FrameLayout>