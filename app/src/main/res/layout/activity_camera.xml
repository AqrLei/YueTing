<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.leilei.guoshujinfu.mylearning.util.view.camera.MyCameraView
            android:id="@+id/take_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="95dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/camera_frame"

            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2e2e2e">
        <ImageView

            android:id="@+id/iv_flash_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/task_level_list_flash_mode"/>
        <ImageView
            android:id="@+id/iv_camera_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/task_capture_img_switch"/>
        <LinearLayout
            android:id="@+id/ll_mode_flash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_flash_auto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="自动"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>
            <TextView
                android:id="@+id/tv_flash_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="18dp"
                android:text="打开"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/tv_flash_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:text="关闭"/>

        </LinearLayout>


    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#000000">
        <ImageView
            android:id="@+id/iv_capture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/common_img_camera_capture"/>

        <ImageView
            android:id="@+id/iv_review_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_capture_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="完成"/>

    </FrameLayout>

</FrameLayout>